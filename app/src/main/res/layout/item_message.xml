<?xml version="1.0" encoding="utf-8"?>
<!-- item_message.xml -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">


    <TextView
        android:id="@+id/placeHolderMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:background="@drawable/edit_text_background"
        android:ellipsize="none"
        android:gravity="start"
        android:lineSpacingExtra="4dp"
        android:maxLines="10"
        android:padding="12dp"
        android:text="Placeholder message text"
        android:textColor="#000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0" />


    <TextView
        android:id="@+id/dateOfMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:padding="4dp"
        android:text="12:30 PM"
        android:textSize="12sp"
        android:textColor="#888888"
        android:gravity="end"
        app:layout_constraintTop_toBottomOf="@id/placeHolderMessage"
        app:layout_constraintEnd_toEndOf="@id/placeHolderMessage"
        app:layout_constraintStart_toStartOf="@id/placeHolderMessage" />
</androidx.constraintlayout.widget.ConstraintLayout>