<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DoctorDashboard.CreateDiagnoses.CreateDiagnosesView">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/patientEmail"
            android:layout_width="356dp"
            android:layout_height="59dp"
            android:background="@drawable/edit_text_background"
            android:elevation="4dp"
            android:hint="Patient Email"
            android:minHeight="48dp"
            android:padding="12dp"
            android:textColorHint="#757575"
            android:translationZ="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.261" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="94dp"
            android:layout_height="51dp"
            android:src="@drawable/patient_email_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.018"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.2" />

        <Button
            android:id="@+id/submitButton"
            android:layout_width="356dp"
            android:layout_height="56dp"
            android:backgroundTint="#1877F2"
            android:text="Submit Diagnose"
            android:textColor="#FAF8F8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.799" />

        <EditText
            android:id="@+id/diagnoseDescription"
            android:layout_width="356dp"
            android:layout_height="284dp"
            android:background="@drawable/edit_text_background"
            android:elevation="4dp"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Diagnose Description"
            android:inputType="textMultiLine"
            android:padding="12dp"
            android:textColorHint="#757575"
            android:translationZ="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.552" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>