<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edit_text_background"
    android:elevation="4dp"
    android:padding="12dp"
    android:textColorHint="#757575"
    android:translationZ="4dp"
    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/nameOfAppointments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gayathri_bold"
        android:text="Muhamed Cakaj"
        android:textColor="#1A1919"
        android:textSize="17sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-2dp" />

    <TextView
        android:id="@+id/dateOfAppointments"
        android:layout_height="32dp"
        android:fontFamily="@font/gayathri_thin"
        android:text="2025-06-28,7:13"
        android:textSize="17sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="24dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#D0F0C0"
        android:fontFamily="@font/gayathri_bold"
        android:textColor="#210303"
        android:text="Approved"
        tools:layout_editor_absoluteX="235dp"
        tools:layout_editor_absoluteY="66dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button6"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFFFF"
        android:elevation="4dp"
        android:fontFamily="@font/gayathri_bold"
        android:minHeight="48dp"
        android:text="Approved"
        android:textColor="#210303"
        tools:ignore="MissingConstraints,TouchTargetSizeCheck"
        tools:layout_editor_absoluteX="233dp"
        tools:layout_editor_absoluteY="-1dp"
        app:strokeColor="#1877F2"
        app:strokeWidth="1dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>